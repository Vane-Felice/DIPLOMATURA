
<div class="container" style="margin-top: 100px;">
    <div class="row">
        <form action="/admin/login" method="post">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUser" placeholder="Usuario" name="usuario">
                </div>

            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" placeholder= "Contraseña" 
                        name="password">
                </div>

            </div>
            <button type="submit" class="btn btn-outline-info" style="margin-bottom: 20px;">Ingresar</button>
        </form>
        {{#if error}}
        <p style="color: rgb(170, 38, 38);">Usuario o contraseña incorrectos</p>
        {{/if}}
    </div>

</div>